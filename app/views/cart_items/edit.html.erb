<h1>Edit Cart Item</h1>
 
<%= form_for @cart_item, url: cart_item_path(@cart_item), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
 
  <%= f.submit "Update Cart Item", class: "btn btn-primary" %>
<% end %>
