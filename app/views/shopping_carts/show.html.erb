<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Book</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |book_id, quantity| %>
        <tr>
          <td><%= book_id.name %></td>
          <td><%= quantity %></td>
          <td><%= number_to_currency(book_id.price) %></td>
          <td><%= number_to_currency(book_id.price * quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="total-price">
    <span>Total:</span>
    <%= number_to_currency(@total_price) %>
  </div>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
